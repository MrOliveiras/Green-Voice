<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity"
        android:padding="8dp">

        <View
                android:layout_width="match_parent"
                android:layout_height="30dp"/>

        <ImageView
            android:id="@+id/img"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/green_voice" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="O poder da sua voz pode ajudar o mundo!" />

        <View
                android:layout_width="match_parent"
                android:layout_height="40dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Usuário:" />

        <EditText
            android:id="@+id/etNomeDeUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Usuário, telefone ou e-mail"
            android:textSize="18dp"
            android:padding="10dp"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Senha:" />

        <EditText
            android:id="@+id/etSenhaDeUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="********"
            android:inputType="textPassword"
            android:textSize="18dp"
            />

        <View
                android:layout_width="match_parent"
                android:layout_height="30dp"/>

        <Button

            android:padding="10dp"
            android:id="@+id/btEntrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Entrar"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/TxCadastrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Ainda não tem conta? Cadastre-se"
            android:textSize="18dp"
            android:padding="10dp"/>

        <View
                android:layout_width="match_parent"
                android:layout_height="30dp"/>

        <Button
            android:id="@+id/btAnonimo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Modo Anônimo"
            android:textSize="20dp"
            android:padding="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Garante sigilo de seus dados."
            android:padding="10dp"/>

    </LinearLayout>

</ScrollView>