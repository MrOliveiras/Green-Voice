<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">

        <View
                android:layout_width="match_parent"
                android:layout_height="25dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Denúncia"
                android:textSize="30dp"
                android:layout_gravity="center"
                />

        <ImageView
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:src="@drawable/megafone"
                android:layout_gravity="center_horizontal"
                />

        <View
                android:layout_width="match_parent"
                android:layout_height="25dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Título:" />

        <EditText
                android:id="@+id/etTituloDenuncia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Dê um nome para a denúncia"
                android:textSize="18dp"
                android:padding="10dp"
                />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descrição:" />

        <EditText
                android:id="@+id/etDescricaoDenuncia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapSentences|textMultiLine"
                android:hint="Dê um nome para a denúncia"
                android:textSize="18dp"
                android:padding="10dp"
                />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo de ocorrência: "
                />

        <Spinner
                android:id="@+id/spinner_categorias"
                android:entries="@array/categorias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                />

        <View
                android:layout_width="match_parent"
                android:layout_height="25dp"/>

        <ImageView
                android:id="@+id/imagem_evidência"
                android:src="@drawable/ic_image_black_24dp"
                android:scaleType="centerCrop"
                android:layout_gravity="center_horizontal"
                android:layout_width="300dp"
                android:layout_height="300dp"/>

        <Button
                android:id="@+id/botaoEscolherImagem"
                android:text="Escolher imagem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <View
                android:layout_width="match_parent"
                android:layout_height="25dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Endereço: "
                />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                >

            <EditText
                    android:id="@+id/et_cep"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:hint="CEP"
                    android:textSize="18dp"
                    android:layout_weight="4"
                    />

            <Button
                    android:id="@+id/botao_cep"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Buscar"
                    android:layout_weight="8"
                    />

        </LinearLayout>

        <EditText
                android:id="@+id/et_rua"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Rua"
                android:textSize="18dp"
                android:padding="10dp"
                />

        <EditText
                android:id="@+id/et_cidade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Cidade"
                android:textSize="18dp"
                android:padding="10dp"
                />

        <EditText
                android:id="@+id/et_uf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="UF"
                android:textSize="18dp"
                android:padding="10dp"
                />

        <View
                android:layout_width="match_parent"
                android:layout_height="25dp"/>

        <Button
                android:id="@+id/botaoEnviarDenuncia"
                android:text="Enviar denúncia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

    </LinearLayout>

</ScrollView>